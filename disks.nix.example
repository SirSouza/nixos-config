{ ... }:

{
  # Exemplo de configuração de discos
  # Copie este arquivo para `disks.nix` e ajuste os UUIDs conforme sua máquina
  # Discos com formatação NTFS
  #
  # Para descobrir os UUIDs:
  #   lsblk -f
  # ou:
  #   blkid

  fileSystems."/mnt/Hard-Drive" = {
    device = "/dev/disk/by-uuid/SEU-UUID-AQUI";
    fsType = "ntfs";
    options = [ "rw" "uid=1000" "nofail" ];
  };

  fileSystems."/mnt/Hard-Drive-1" = {
    device = "/dev/disk/by-uuid/SEU-UUID-AQUI";
    fsType = "ntfs";
    options = [ "rw" "uid=1000" "nofail" ];
  };
}
